# GitHub Pages configuration generated by InsightForge
title: {{ project_name }}
description: {{ project_description }}
theme: {{ theme|default('jekyll-theme-minimal') }}
markdown: kramdown
kramdown:
  input: GFM
  syntax_highlighter: rouge
  
# Navigation structure
nav:
  - title: Overview
    url: /overview
  - title: Classes
    url: /classes/
  - title: Functions
    url: /functions/
{% if has_modules %}
  - title: Modules
    url: /modules/
{% endif %}
{% if has_diagrams %}
  - title: Diagrams
    url: /diagrams/
{% endif %}
{% if has_business_rules %}
  - title: Business Rules
    url: /business_rules/
{% endif %}

# Additional settings
plugins:
  - jekyll-seo-tag